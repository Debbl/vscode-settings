{
  /*
   * 工作台
   */
  "workbench.iconTheme": "material-icon-theme", // 颜色主题
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#2f7aeb7c"
  },
  "workbench.sideBar.location": "right", // 侧边栏放在右边
  "workbench.colorTheme": "Atom One Dark",
  "workbench.editor.tabActionLocation": "left",
  "workbench.list.smoothScrolling": true,
  "workbench.tree.expandMode": "singleClick",
  "workbench.tree.indent": 10,
  "workbench.commandPalette.experimental.suggestCommands": true,
  // "workbench.fontAliasing": "antialiased",
  "workbench.editor.customLabels.patterns": {
    "**/app/**/page.tsx": "${dirname} - page.tsx",
    "**/app/**/layout.tsx": "${dirname} - layout.tsx"
  },
  "workbench.activityBar.location": "top",
  "workbench.tree.enableStickyScroll": false,

  "scm.showHistoryGraph": false,

  /*
   * window
   */
  // ==========  Global Level Config, needs to put in User Settings ==========
  "window.customTitleBarVisibility": "never",
  "window.title": "${rootName}", // this make tabs more readable
  "window.titleBarStyle": "custom",
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "window.zoomLevel": 1,
  "window.dialogStyle": "custom",
  "window.nativeTabs": true,
  "http.proxy": "http://127.0.0.1:6152",

  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": false,

  /*
   * 终端
   */
  "terminal.integrated.fontFamily": "'MesloLGS NF'", // 终端字体
  "terminal.integrated.enableImages": true, // 文件自动保存
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "scm.diffDecorationsGutterWidth": 2,
  "terminal.integrated.smoothScrolling": true, // 查看文件树时不合并

  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,

  /*
   * 编辑器
   */
  // "editor.foldingStrategy": "indentation",
  "editor.stickyScroll.enabled": false,
  "explorer.confirmDelete": false, // 删除文件时是否确认
  "editor.hover.sticky": true,
  "editor.accessibilitySupport": "off",
  "editor.find.addExtraSpaceOnTop": false,
  "editor.inlineSuggest.enabled": true,
  "editor.renderLineHighlight": "gutter",
  "editor.lineNumbers": "interval",
  "editor.renderWhitespace": "all",
  "editor.formatOnSave": false, // 保存时自动格式化
  "editor.autoClosingDelete": "always", // 删除相邻的引号
  "editor.autoClosingOvertype": "always", // 自动输入闭合引号
  "editor.showFoldingControls": "always", // 显示折叠图标
  "editor.suggest.snippetsPreventQuickSuggestions": false, // 控制活动代码段是否阻止快速建议
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true, // 括号颜色
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.fixAll.eslint": "explicit", // eslint autoFix
    "source.organizeImports": "never"
  },
  "editor.guides.bracketPairs": "active", // 类括号显示多彩的竖线
  "editor.guides.bracketPairsHorizontal": "active", // 类括号显示多彩的横线
  "editor.defaultFormatter": "dbaeumer.vscode-eslint", // 默认格式化方式
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontSize": 14,
  "editor.colorDecorators": false, // CSS 颜色
  "editor.fontFamily": "'Monaspace Neon', 'JetBrains Mono NL', Menlo, Monaco, 'Courier New', monospace",
  // "editor.formatOnSaveMode": "modificationsIfAvailable",
  // "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.smoothScrolling": true,
  // "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly",

  // hidden primary side bar

  // system
  "css.lint.unknownAtRules": "ignore",
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "files.autoSave": "onFocusChange",

  "[rust]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.inlayHints.enabled": "offUnlessPressed"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[plaintext]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "Vue.volar"
  },

  "diffEditor.ignoreTrimWhitespace": true,
  "gitlens.views.commitDetails.files.layout": "tree",
  "diffEditor.useInlineViewWhenSpaceIsLimited": false,

  // #region 插件
  "cSpell.userWords": [
    "ahooks",
    "aimant",
    "aiwan",
    "antd",
    "antfu",
    "Attributify",
    "Axios",
    "Bilibili",
    "bumpp",
    "clsx",
    "codesandbox",
    "daisyui",
    "debbl",
    "echarts",
    "iconify",
    "immer",
    "pinia",
    "reduxjs",
    "Sandpack",
    "Spandpack",
    "tabbar",
    "tailwindCSS",
    "tsup",
    "typecheck",
    "umami",
    "unocss",
    "unplugin",
    "vant",
    "vueuse",
    "vuex",
    "zustand"
  ],
  "prettier.quoteProps": "consistent",
  "eslint.format.enable": true,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "mdx",
    "json",
    "jsonc",
    "json5",
    "yaml",
    "yml",
    "toml"
  ],

  "unocss.disable": true,

  // Error Lens
  "errorLens.enabledDiagnosticLevels": ["error"],

  // Live Server
  "liveServer.settings.donotShowInfoMsg": true,

  // Color Highlight
  "color-highlight.markerType": "dot-before",

  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false
  },

  // Vim
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "vim.foldfix": true,
  "vim.incsearch": true,
  "vim.surround": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.overrideCopy": true,
  "vim.visualstar": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 100,
  "vim.highlightedyank.color": "rgba(82, 146, 247, 0.4)",
  "vim.replaceWithRegister": true,
  // "vim.sneak": true,
  "vim.handleKeys": {
    // "<C-a>": false,
    // "<C-f>": false,
    // "<C-u>": false
  },
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["g", "j"],
      "silent": true
    },
    {
      "before": ["k"],
      "after": ["g", "k"],
      "silent": true
    },
    {
      "before": ["x"],
      "after": ["\"", "_", "x"],
      "silent": true
    },
    {
      "before": ["H"],
      "after": ["^"],
      "silent": true
    },
    {
      "before": ["L"],
      "after": ["$"],
      "silent": true
    },
    {
      "before": ["g", "["],
      "commands": ["editor.action.marker.prevInFiles"]
    },
    {
      "before": ["g", "]"],
      "commands": ["editor.action.marker.nextInFiles"]
    },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    {
      "before": ["leader", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["leader", "f"],
      "commands": ["prettier.forceFormatDocument"]
    },
    {
      "before": ["leader", "e"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["leader", "r", "o"],
      "commands": ["workbench.action.openRecent"]
    },
    {
      "before": ["leader", "l", "s"],
      "commands": ["workbench.action.quickOpenLeastRecentlyUsedEditorInGroup"]
    },
    // {
    //   "before": [":"],
    //   "commands": ["workbench.action.showCommands"]
    // },
    // {
    //   "before": [";"],
    //   "commands": ["workbench.action.quickOpen"]
    // },
    {
      "before": ["leader", "t", "t"],
      "commands": ["workbench.action.terminal.toggleTerminal"]
    },
    {
      "before": ["leader", "/"],
      "commands": ["editor.action.commentLine"]
    },
    // 关闭当前活跃的窗口
    {
      "before": ["leader", "t", "x"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["leader", "s", "x"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    // 下一个 tab
    {
      "before": ["leader", "t", "n"],
      "after": ["g", "t"]
    },
    {
      "before": ["leader", "t", "p"],
      "after": ["g", "T"]
    },
    // toggle bool value
    {
      "before": ["<leader>", "t", "b"],
      "commands": ["toggleBool.toggle"]
    },
    // 水平分屏
    {
      "before": ["leader", "s", "h"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["leader", "s", "v"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": ["leader", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["leader", "d"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["leader", "l", "l"],
      "commands": ["turboConsoleLog.displayLogMessage"]
    },
    {
      "before": ["leader", "r", "r"],
      "commands": ["workbench.action.newWindowTab"]
    },
    // bookmarks extension
    {
      "before": ["<leader>", "m"],
      "commands": ["bookmarks.toggle"]
    },
    {
      "before": ["<leader>", "<leader>", "m"],
      "commands": ["bookmarks.toggleLabeled"]
    },
    {
      "before": ["<leader>", "b"],
      "commands": ["bookmarks.list"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["leader", "/"],
      "commands": ["editor.action.blockComment"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$", "h"]
    },
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    },
    {
      "before": ["leader", "f"],
      "commands": ["editor.action.formatSelection"]
    },
    {
      "before": ["p"],
      "after": ["p", "g", "v", "y"],
      "silent": true
    }
  ],
  "vim.operatorPendingModeKeyBindingsNonRecursive": [
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    }
  ],
  // #endregion

  "search.exclude": {
    "**/*.snap": true,
    "**/*.svg": true,
    "**/.git": true,
    "**/.github": false,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/assets": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/public": true,
    "**/temp": true,
    "**/yarn.lock": true,
    "**/CHANGELOG*": true,
    "**/LICENSE*": true
  },
  "liveServer.settings.donotVerifyTags": true
}


