{
  /*
   * 工作台
   */
  "workbench.iconTheme": "material-icon-theme", // 文件图标主题
  "workbench.colorTheme": "Atom One Dark", // 颜色主题
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#2f7aeb7c" // 选定时的颜色
  },
  "workbench.sideBar.location": "right", // 侧边栏放在右边
  /*
   * window
   */
  "http.proxy": "http://127.0.0.1:7890", // 代理
  "window.nativeTabs": true,
  /*
   * 终端
   */
  "terminal.integrated.fontFamily": "\"MesloLGS NF\"", // 终端字体
  /*
   * 文件
   */
  "files.autoSave": "afterDelay", // 文件自动保存
  /*
   * 资源管理
   */
  "explorer.compactFolders": false, // 查看文件树时不合并
  /*
   * 编辑器
   */
  "editor.renderWhitespace": "all", // 显示空格符号
  "explorer.confirmDelete": false, // 删除文件时是否确认
  "editor.formatOnSave": true, // 保存时格式化
  "editor.renderLineHighlight": "gutter", // 突出选中行样式
  "editor.autoClosingDelete": "always", // 删除相邻的引号
  "editor.autoClosingOvertype": "always", // 自动输入闭合引号
  "editor.showFoldingControls": "always", // 显示折叠图标
  "editor.suggest.snippetsPreventQuickSuggestions": false, // 控制活动代码段是否阻止快速建议
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true, // 括号颜色
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true // eslint 格式
  },
  "editor.guides.bracketPairs": "active", // 类括号显示多彩的竖线
  "editor.guides.bracketPairsHorizontal": "active", // 类括号显示多彩的横线
  "editor.defaultFormatter": "esbenp.prettier-vscode", // 默认格式化方式
  "editor.cursorSmoothCaretAnimation": true, // 光标移动动画
  "editor.fontFamily": "'JetBrainsMono', Menlo, Monaco, 'Courier New', monospace", // font
  "editor.fontSize": 13, // font size
  /*
   * 文件类型
   */
  // .vue
  "[vue]": {
    "editor.tabSize": 2
  },
  // .js
  "[javascript]": {
    "editor.tabSize": 2
  },
  // .jsx
  "[javascriptreact]": {
    "editor.tabSize": 2
  },
  // .css
  "[css]": {
    "editor.tabSize": 2
  },
  // .html
  "[html]": {
    "editor.tabSize": 2
  },
  // .json
  "[json]": {
    "editor.tabSize": 2
  },
  // .ts
  "[typescript]": {
    "editor.tabSize": 2
  },
  // .scss
  "[scss]": {
    "editor.tabSize": 2
  },
  // .tsx
  "[typescriptreact]": {
    "editor.tabSize": 2
  },
  "[svg]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "jock.svg"
  },
  /*
   * 插件
   */
  // 插件单词检查
  "cSpell.userWords": [
    "vuex",
    "debbl",
    "pinia",
    "vant",
    "tabbar",
    "clsx",
    "immer",
    "tailwindCSS"
  ],
  // ESLint
  "eslint.alwaysShowStatus": true,
  "eslint.format.enable": true,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "json5"
  ],
  // Error Lens
  "errorLens.enabledDiagnosticLevels": ["error"],
  // Vim
  // "vim.easymotion": true,
  "vim.foldfix": true,
  "vim.incsearch": true,
  "vim.surround": true,
  "vim.sneak": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["J"],
      "after": ["5", "j"]
    },
    {
      "before": ["K"],
      "after": ["5", "k"]
    },
    {
      "before": ["leader", "s"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["leader", "e"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["leader", "t"],
      "commands": ["workbench.action.terminal.toggleTerminal"]
    }
  ],
  "vim.leader": "<space>",
  "vim.overrideCopy": true,
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-u>": false
  },
  /*
   * other
   */
  // search
  "search.followSymlinks": false, // 控制搜索时是否遵循符号链接
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },
  "window.zoomLevel": 1,
  "liveServer.settings.donotShowInfoMsg": true,
  // "terminal.integrated.env.osx": {
  //   "FIG_NEW_SESSION": "1"
  // },
  // "editor.accessibilitySupport": "off",
}
