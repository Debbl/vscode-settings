{
  /*
   * 工作台
   */
  "workbench.iconTheme": "material-icon-theme", // 文件图标主题
  "workbench.colorTheme": "Atom One Dark", // 颜色主题
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#2f7aeb7c",
    "statusBar.background": "#6A1B9A",
    "statusBar.noFolderBackground": "#6A1B9A",
    "statusBar.debuggingBackground": "#6A1B9A",
    "statusBar.foreground": "#F5F5F5",
    "statusBar.debuggingForeground": "#F5F5F5"
  },
  "workbench.sideBar.location": "right", // 侧边栏放在右边

  /*
   * window
   */
  "http.proxy": "http://127.0.0.1:7890", // 代理
  "window.nativeTabs": true,

  /*
   * 终端
   */
  "terminal.integrated.fontFamily": "\"MesloLGS NF\"", // 终端字体

  /*
   * 文件
   */
  "files.autoSave": "afterDelay", // 文件自动保存

  /*
   * 资源管理
   */
  "explorer.compactFolders": false, // 查看文件树时不合并

  /*
   * 编辑器
   */
  "editor.renderWhitespace": "all", // 显示空格符号
  "explorer.confirmDelete": false, // 删除文件时是否确认
  "editor.formatOnSave": true, // 保存时格式化
  "editor.renderLineHighlight": "gutter", // 突出选中行样式
  "editor.autoClosingDelete": "always", // 删除相邻的引号
  "editor.autoClosingOvertype": "always", // 自动输入闭合引号
  "editor.showFoldingControls": "always", // 显示折叠图标
  "editor.suggest.snippetsPreventQuickSuggestions": false, // 控制活动代码段是否阻止快速建议
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true, // 括号颜色
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true // eslint 格式
  },
  "editor.guides.bracketPairs": "active", // 类括号显示多彩的竖线
  "editor.guides.bracketPairsHorizontal": "active", // 类括号显示多彩的横线
  "editor.defaultFormatter": "dbaeumer.vscode-eslint", // 默认格式化方式
  "editor.cursorSmoothCaretAnimation": "on", // 光标移动动画
  "editor.fontFamily": "'JetBrainsMono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 13,

  // system
  "css.lint.unknownAtRules": "ignore",
  "emmet.showSuggestionsAsSnippets": true,
  "git.autofetch": true,

  // #region 文件类型
  "[vue]": {
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.tabSize": 2
  },
  "[scss]": {
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.tabSize": 2
  },
  "[svg]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "jock.svg"
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  // #endregion

  // #region 插件
  "cSpell.userWords": [
    "vuex",
    "debbl",
    "pinia",
    "vant",
    "tabbar",
    "clsx",
    "immer",
    "tailwindCSS",
    "reduxjs"
  ],

  "eslint.format.enable": true,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "json5"
  ],

  "errorLens.enabledDiagnosticLevels": ["error"],

  "liveServer.settings.donotShowInfoMsg": true,

  "indentRainbow.indicatorStyle": "light",

  "vim.foldfix": true,
  "vim.incsearch": true,
  "vim.surround": true,
  "vim.sneak": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.overrideCopy": true,
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-u>": false
  },
  "vim.statusBarColorControl": true, 
  "vim.statusBarColors.normal": ["#1976D2", "#E0E0E0"],
  "vim.statusBarColors.insert": ["#1A237E", "#F5F5F5"],
  "vim.statusBarColors.visual": ["#6A1B9A", "#F5F5F5"],
  "vim.statusBarColors.replace": "#D08770",
  "vim.statusBarColors.commandlineinprogress": "#007ACC",
  "vim.statusBarColors.searchinprogressmode": "#007Aaa",
  "vim.statusBarColors.surroundinputmode": "#007A00",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["x"],
      "after": ["\"", "_", "x"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["u"],
      "commands": ["undo"]
    },
    {
      "before": ["g", "["],
      "commands": ["editor.action.marker.prevInFiles"]
    },
    {
      "before": ["g", "]"],
      "commands": ["editor.action.marker.nextInFiles"]
    },
    {
      "before": ["leader", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["leader", "p"],
      "commands": ["prettier.forceFormatDocument"]
    },
    {
      "before": ["leader", "e"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": [":"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": [";"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["leader", "t", "t"],
      "commands": ["workbench.action.terminal.toggleTerminal"]
    },
    {
      "before": ["leader", "/"],
      "commands": ["editor.action.commentLine"]
    },
    // 关闭当前活跃的窗口
    {
      "before": ["leader", "t", "x"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["leader", "s", "x"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    // 下一个 tab
    {
      "before": ["leader", "t", "n"],
      "after": ["g", "t"]
    },
    {
      "before": ["leader", "t", "p"],
      "after": ["g", "T"]
    },
    // 水平分屏
    {
      "before": ["leader", "s", "h"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["leader", "s", "v"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": ["leader", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["leader", "d"],
      "commands": ["editor.action.quickFix"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["leader", "/"],
      "commands": ["editor.action.blockComment"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$", "h"]
    }
  ],
  "vim.operatorPendingModeKeyBindingsNonRecursive": [
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    }
  ],
  // #endregion

  /*
   * other
   */
  // search
  "search.followSymlinks": false, // 控制搜索时是否遵循符号链接
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },
  "files.associations": {
    "*.ttss": "css",
    "*.wxss": "css",
    "*.sjs": "javascript",
    "*.ttml": "ttml",
    "*.wxml": "ttml",
    "*.sk": "ttml"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.byte-ide": true
  },
  "window.zoomLevel": 1,
  "git.confirmSync": false,
  "Codegeex.Privacy": false,
  "color-highlight.markerType": "dot-before"
}

