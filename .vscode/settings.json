{
  /*
   * 工作台
   */
  "workbench.iconTheme": "material-icon-theme", // 颜色主题
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#2f7aeb7c"
  },
  "workbench.sideBar.location": "right", // 侧边栏放在右边
  "workbench.colorTheme": "Atom One Dark",
  "workbench.editor.tabCloseButton": "left",
  "workbench.list.smoothScrolling": true,
  "workbench.tree.expandMode": "singleClick",
  "workbench.tree.indent": 10,

  /*
   * window
   */
  "window.dialogStyle": "custom",
  "window.nativeTabs": true,
  "window.zoomLevel": 1,
  "http.proxy": "http://127.0.0.1:7890",

  /*
   * 终端
   */
  "terminal.integrated.fontFamily": "'MesloLGS NF'", // 终端字体
  "terminal.integrated.enableImages": true, // 文件自动保存
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.enabled": true,
  "scm.diffDecorationsGutterWidth": 2,

  /*
   * 资源管理
   */
  "explorer.compactFolders": false, // 查看文件树时不合并

  /*
   * 编辑器
   */
  "editor.stickyScroll.enabled": true,
  "editor.hover.sticky": true,
  "editor.accessibilitySupport": "off",
  "editor.find.addExtraSpaceOnTop": false,
  "editor.inlineSuggest.enabled": true,
  "editor.renderLineHighlight": "gutter",
  "editor.lineNumbers": "interval",
  "editor.renderWhitespace": "all",
  "explorer.confirmDelete": false, // 删除文件时是否确认
  "editor.formatOnSave": true, // 突出选中行样式
  "editor.autoClosingDelete": "always", // 删除相邻的引号
  "editor.autoClosingOvertype": "always", // 自动输入闭合引号
  "editor.showFoldingControls": "always", // 显示折叠图标
  "editor.suggest.snippetsPreventQuickSuggestions": false, // 控制活动代码段是否阻止快速建议
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true, // 括号颜色
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit", // eslint autoFix
    "source.organizeImports": "never"
  },
  "editor.guides.bracketPairs": "active", // 类括号显示多彩的竖线
  "editor.guides.bracketPairsHorizontal": "active", // 类括号显示多彩的横线
  "editor.defaultFormatter": "dbaeumer.vscode-eslint", // 默认格式化方式
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontSize": 14,
  "editor.colorDecorators": false, // CSS 颜色
  "editor.fontFamily": "'JetBrains Mono NL', 'Monaspace Neon', Menlo, Monaco, 'Courier New', monospace",
  "editor.formatOnSaveMode": "modificationsIfAvailable",

  // system
  "css.lint.unknownAtRules": "ignore",
  "emmet.showSuggestionsAsSnippets": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "files.autoSave": "onFocusChange",

  // #region 插件
  "cSpell.userWords": [
    "ahooks",
    "aimant",
    "aiwan",
    "antd",
    "antfu",
    "Attributify",
    "Bilibili",
    "bumpp",
    "clsx",
    "codesandbox",
    "daisyui",
    "debbl",
    "echarts",
    "iconify",
    "immer",
    "pinia",
    "reduxjs",
    "Sandpack",
    "Spandpack",
    "tabbar",
    "tailwindCSS",
    "umami",
    "unocss",
    "vant",
    "vueuse",
    "vuex",
    "zustand"
  ],
  "prettier.quoteProps": "consistent",
  "prettier.trailingComma": "all",
  "eslint.format.enable": true,
  "eslint.experimental.useFlatConfig": true,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "mdx",
    "json",
    "jsonc",
    "json5",
    "yaml",
    "yml"
  ],

  // Error Lens
  "errorLens.enabledDiagnosticLevels": ["error"],

  // Live Server
  "liveServer.settings.donotShowInfoMsg": true,

  // Color Highlight
  "color-highlight.markerType": "dot-before",

  // Vim
  "vim.foldfix": true,
  "vim.incsearch": true,
  "vim.surround": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.overrideCopy": true,
  "vim.handleKeys": {
    // "<C-a>": false,
    // "<C-f>": false,
    // "<C-u>": false
  },
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["J"],
      "after": ["5", "j"]
    },
    {
      "before": ["K"],
      "after": ["5", "k"]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["x"],
      "after": ["\"", "_", "x"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["g", "["],
      "commands": ["editor.action.marker.prevInFiles"]
    },
    {
      "before": ["g", "]"],
      "commands": ["editor.action.marker.nextInFiles"]
    },
    {
      "before": ["leader", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["leader", "f"],
      "commands": ["prettier.forceFormatDocument"]
    },
    {
      "before": ["leader", "e"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": [":"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": [";"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["leader", "t", "t"],
      "commands": ["workbench.action.terminal.toggleTerminal"]
    },
    {
      "before": ["leader", "/"],
      "commands": ["editor.action.commentLine"]
    },
    // 关闭当前活跃的窗口
    {
      "before": ["leader", "t", "x"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["leader", "s", "x"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    // 下一个 tab
    {
      "before": ["leader", "t", "n"],
      "after": ["g", "t"]
    },
    {
      "before": ["leader", "t", "p"],
      "after": ["g", "T"]
    },
    // 水平分屏
    {
      "before": ["leader", "s", "h"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["leader", "s", "v"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": ["leader", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["leader", "d"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["leader", "l", "l"],
      "commands": ["turboConsoleLog.displayLogMessage"]
    },
    {
      "before": ["leader", "r", "r"],
      "commands": ["workbench.action.newWindowTab"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["leader", "/"],
      "commands": ["editor.action.blockComment"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$", "h"]
    },
    {
      "before": [">"],
      "after": [">", "g", "v"]
    }
  ],
  "vim.operatorPendingModeKeyBindingsNonRecursive": [
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    }
  ],
  // #endregion

  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },
  /*
   * other
   */
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
}


